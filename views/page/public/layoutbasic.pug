include  ../../components/searchbox
doctype html
html
    head
        title= title
        meta(charset='utf-8')
        meta(name='Description',content='boke')
        meta(name='viewport',content='width=device-width,initial-scale=1,user-scalable=no')
        link(rel="Shortcut Icon" href="/images/avatar.jpeg")
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        header.header.show#header-bind
            div.pad-l-r.clear.max-width
                a(href='/',title='首页')
                    h1.main-title.left 笙笙不息
                nav.nav.right
                    ul.pc
                        li.nav-btn.pc-search
                            + searchbox
                        li.nav-btn
                            a(href='/') 首页
                        li.nav-btn
                            a(href='/original') 原创
                            ul.pc-sec-menu.white-card
                                li
                                    a(href='/original?type=web') 前端
                                li
                                    a(href='/original?type=server') 后端
                                li
                                    a(href='/originalL') 归档
                                li
                                    a(href='/about') 关于我
                        li.nav-btn
                            a(href='/reprint') 转载
                            ul.pc-sec-menu.white-card
                                li
                                    a(href='/reprint?type=follow') 关注
                                li
                                    a(href='/reprint?type=recommended') 推荐
                                li
                                    a(href='/reprint/category') 归档
                        li.nav-btn
                            a(href='/lab') 实验室
                            ul.pc-sec-menu.white-card
                                li
                                    a(href='/lab/category') 归档
                        li.nav-btn
                            a.nav-btn(href='/tool') 资源工具
                            ul.pc-sec-menu.white-card
                                li
                                    a(href='/tool?type=sql') 开发
                                li
                                    a(href='/tool?type=sql') 办公
                                li
                                    a(href='/tool?type=sql') 娱乐
                                li
                                    a(href='/tool/category') 归档
                    div.mobile
                        div.menu-btn#menu-bind-js
                            i.menu-btn-top-line
                            i.menu-btn-middle-line
                            i.menu-btn-bottom-line
                ul.menu-list#menu-list-bind-js.white-card
                    li(style='display:block;width:100%')
                        + searchbox
                    li
                        a(href='/') 首页
                    li
                        a(href='/original') 原创
                    li
                        a(href='/reprint') 转载
                    li
                        a(href='/lab') 实验室
                    li
                        a(href='/tool') 工具库
                    li
                        a(href='/original?type=web') 原创/前端
                    li
                        a(href='/original?type=server') 原创/后端
                    li
                        a(href='/originalL') 原创/归档
                    li
                        a(href='/about') 关于我
                    li
                        a(href='/reprint?type=follow') 转载/关注
                    li
                        a(href='/reprint?type=recommended') 转载/推荐
                    li
                        a(href='/tool?type=sql') 资源工具/开发
                    li
                        a(href='/tool?type=sql') 资源工具/办公
                    li
                        a(href='/tool?type=sql') 资源工具/娱乐
        div.main-container.max-width
            block main-container
        footer.footer.clear
            div.max-width.pad-l-r.pc
                a(href="http://www.baidu.com") 链接
            div.mobile.show#footer-bind
                a 移动端底部导航
        script(src='https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js' defer)
        script(src='/javascripts/main.js' defer)
        block scriptInclude