extends  ../public/layoutbasic
include ../../components/card-style2
include ../../components/card-show-list
include  ../../components/pagination
include  ../../components/table

block main-container
    div.pad
        h2.sub-title 实验室归档
        div.pad
            + table(list,[
                {name: '序号', key: 'id'},
                {name: '名称', key: 'title'},
                {name: '简述', key: 'description'},
                {name: '地址', key: 'url', isLink: true},
                {name: 'git地址', key: 'location', isLink: true},
                {name: '点击数', key: 'click_count'}
            ])
    + pagination(pagination)
block scriptInclude
    script(src='/javascripts/pagination.js' defer)