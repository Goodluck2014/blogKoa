extends  ../public/layoutbasic
include ../../components/card-style2
include ../../components/card-show-list
include  ../../components/pagination
include  ../../components/table

block main-container
    div.pad
        h2.sub-title 实验室归档
        div.pad
            + table(list,[
                {name: '序号', key: 'index'},
                {name: '名称', key: 'title'},
                {name: '内容', key: 'content'},
                {name: '地址', key: 'href'},
                {name: '背景图片', key: 'bg'}
            ])
    + pagination(pagination)
block scriptInclude
    script(src='/javascripts/pagination.js' defer)