mixin table(data,arr)
    div.table-container
        table.table
            tr
                each value,index in arr
                    th= value.name
            if(data && data.length)
                each value,index in data
                    tr
                        each c in arr
                            if c.key === 'index'
                                td= index + 1
                            if c.key === 'href'
                                td
                                    a(href=value[c.key])= value[c.key]
                            if c.key !== 'index' && c.key !== 'href'
                                td= value[c.key]